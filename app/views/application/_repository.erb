<div class="left_rep">
<div class="repository">
	<h3>
		<% if rep1.is_git? %>
			<span class="kind_git">G</span>
		<% elsif rep1.is_hg? %>
			<span class="kind_hg">H</span>
		<% end %>
		<span class="rep_name"><%= link_to rep1.owner.login + "/" + rep1.name, rep1 %></span>
		<%= link_to t(:user_del), rep1, {:method => :delete, :confirm => t(:ask_confirm), :title => t(:user_del) }%>
	</h3>
	<div class="desc">
		<p><%= rep1.desc %></p>
		<div class="clear"></div>
	</div>
</div>
</div>

<% if rep2 %>
<div class="right_rep">
<div class="repository">
	<h3>
		<% if rep2.is_git? %>
			<span class="kind_git">G</span>
