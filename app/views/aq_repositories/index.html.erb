<h1><%= t(:repositories) %></h1>
<div id="repositories">
	<% for repo in @repositories %>
		<div class="repository">
			<h3>
				<%= link_to repo.name, repo %>
			</h3>
			<div class="desc">
				<span class="img"><%= image_tag("/images/icons/big/drives_11.png", :border => 0) %></span>
				<p>blah</p>
				<div class="clear"></div>
			</div>
		</div>
	<% end %>
	<% if current_user %>
		<%= link_to t(:repo_new), new_aq_repository_path %>
	<% end %>
</div>