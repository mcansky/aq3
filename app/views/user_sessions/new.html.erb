<% content_for :head do %>
  <title><%= Settings.application.name %> - <%= t(:login) %></title>
<% end %>

<div id="login">
<h2><%= t(:login) %></h2>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p><%= f.label t(:login_or_email) %><br /><%= f.text_field :login %></p>
  <p><%= f.label t(:password) %><br /><%= f.password_field :password %></p>
  <p><%= f.submit "Login" %></p>
<% end %>
</div>
