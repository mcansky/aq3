<% form_for user do |f| %>
	<%= f.error_messages %>
	<p><%= t(:email) %> : <%= f.text_field :email %></p>
	<p><%= t(:login) %> : <%= f.text_field :login %></p>
	<p><%= t(:password) %> : <%= f.password_field :password %></p>
	<p><%= t(:password_confirmation) %> : <%= f.password_field :password_confirmation %></p>
	<p><%= f.submit t(:submit) %></p>
<% end %>